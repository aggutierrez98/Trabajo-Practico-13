<h2>Registro de usuario</h2>

<form method="POST">
    <div class="form-group">
      <label for="nombre">Nombre</label>
      <input type="text" name="nombre" id="nombre" value="{{obj.nombre}}" class="form-control" pattern="[A-Za-z]{1,15}" required="true">
      <label for="apellido">Apellido</label>
      <input type="text" name="apellido" id="apellido" value="{{obj.apellido}}" class="form-control" pattern="[A-Za-z]{1,15}" required="true">
      <label for="email">Email</label>
      <input type="email" name="email" id="email" value="{{obj.email}}" class="form-control" pattern="[A-Za-z0-9_-@]{1,15}" required="true">
      <label for="password">Contrase√±a</label>
      <input type="password" name="password" id="password" value="{{obj.password}}" class="form-control" required="true">
      <label for="calle">Calle</label>
      <input type="text" name="calle" id="calle" value="{{obj.calle}}" class="form-control" pattern="[A-Za-z]{1,15}" required="true">
      <label for="numero">Numero</label>
      <input type="number" name="numero" id="numero" value="{{obj.numero}}" class="form-control" required="true">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/">Cancelar</a>
</form>